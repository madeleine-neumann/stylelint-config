{
  "plugins": [
    "stylelint-order"
  ],

  "rules": {
    "max-nesting-depth": 3,
    "function-max-empty-lines": 1,
    "indentation": 2,
    "selector-no-id": true,
    "color-no-hex": true,
    "color-no-invalid-hex": true,
    "declaration-block-no-duplicate-properties": true,
    "declaration-block-no-redundant-longhand-properties": true,
    "declaration-block-no-shorthand-property-overrides": true,
    "declaration-block-semicolon-space-after": "always",
    "declaration-no-important": true,
    "font-weight-notation": "numeric",
    "at-rule-no-vendor-prefix": false,
    "media-feature-name-no-vendor-prefix": false,
    "property-no-vendor-prefix": false,
    "selector-no-vendor-prefix": false,
    "value-no-vendor-prefix": false,

    "order/declaration-block-properties-specified-order": [
      "position",
      "z-index",
      "top",
      "bottom",
      "left",
      "right",
      "float",
      "clear",
      "/flex/",
      "display",
      "visibility",
      "opacity",
      "transform",
      "/overflow/",
      "/clip/",
      "animation",
      "transition",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "box-shadow",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-color",
      "border-top-color",
      "border-right-color",
      "border-bottom-color",
      "border-left-color",
      "border-style",
      "border-top-style",
      "border-right-style",
      "border-bottom-style",
      "border-left-style",
      "border-radius",
      "border-top-left-radius",
      "border-top-right-radius",
      "border-bottom-right-radius",
      "border-bottom-left-radius",
      "box-sizing",
      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "background",
      "background-color",
      "background-image",
      "background-repeat",
      "background-position",
      "background-size",
      "cursor",
      "font-family",
      "font-size",
      "line-height",
      "font-weight",
      "font-style",
      "text-align",
      "text-indent",
      "text-transform",
      "text-decoration",
      "text-rendering",
      "text-shadow",
      "text-overflow",
      "word-spacing",
      "letter-spacing",
      "white-space",
      "color",
      "content"
    ]

  }
}

